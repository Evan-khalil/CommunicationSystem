@model SearchViewModel
@{
    ViewData["Title"] = "Sök inlägg";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SearchCriteria" class="control-label"></label>
                <input id="searchCriteria" tabindex="1" asp-for="SearchCriteria" class="form-control" />
                <span asp-validation-for="SearchCriteria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SearchTitleAndText" class="control-label"></label>
                <input id="searchTitleAndText" tabindex="-1" asp-for="SearchTitleAndText" class="form-check-inline" type="checkbox" name="SearchTitleAndText" />
                <label asp-for="SearchAuthor" class="control-label"></label>
                <input id="searchAuthor" tabindex="-1" asp-for="SearchAuthor" class="form-check-inline" type="checkbox" name="SearchAuthor" />
                <label asp-for="SearchCategories" class="control-label"></label>
                <input id="searchCategories" tabindex="-1" asp-for="SearchCategories" class="form-check-inline" type="checkbox" name="SearchCategories" />
                <label asp-for="Type" class="control-label"></label>
                <select id="blogType" tabindex="-1" asp-for="Type" asp-items="@Html.GetEnumSelectList<BlogType>()" class="custom-select-sm">
                    <option value="">Alla typer</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" id="btnSearch" tabindex="2" value="Sök" class="btn btn-primary pl-4 pr-4" />
            </div>
        </form>
    </div>
</div>
<div class="row">
    <div id="searchResult" class="col-12"></div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="/js/Search.js"></script>
}