@using CommunicationApp.Views.Account
@model Person
@{
    ViewData["Title"] = "Redigera personuppgifter";
    ViewData["ActivePage"] = ManageNavPages.Index;
    Layout = "_ManageLayout";
}

<h4>Redigera personuppgifter</h4>
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" asp-action="Index" asp-controller="Account">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email">E-post (användarnamn)</label>
                <input asp-for="Email" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label>Telefon</label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-check">
                <input asp-for="Subscriber" class="form-check-input" type="checkbox" id="defaultCheck1">
                <label class="form-check-label" for="defaultCheck1">Prenumerera på alla blogginlägg
                </label>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary mt-3">Uppdatera personuppgifter</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}